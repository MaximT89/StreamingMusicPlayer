<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="colorSelectedCardViewItem" format="color|reference"/>
    <attr name="colorScrubber" format="color|reference"/>
    <!-- Base application theme. -->
    <style name="Theme.StreamingMusicPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coffee_700</item>
        <item name="colorPrimaryDark">@color/coffee_dark_900</item>
        <item name="colorPrimaryVariant">@color/coffee_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coffee_dark_700</item>
        <item name="colorSecondaryVariant">@color/coffee_dark_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:colorBackground">?colorPrimaryDark</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="colorSelectedCardViewItem">@color/black_alpha_40</item>
        <item name="colorScrubber">?colorPrimaryVariant</item>
    </style>

    <style name="Widget.StreamingMusicPlayer.MediaImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button_ripple_effect</item>
        <item name="tint">?colorPrimaryVariant</item>
    </style>

    <style name="Widget.StreamingMusicPlayer.MiniDefaultTimeBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="played_color">?colorPrimaryVariant</item>
        <item name="buffered_color">@android:color/transparent</item>
        <item name="unplayed_color">@android:color/transparent</item>
        <item name="scrubber_disabled_size">0dp</item>
        <item name="scrubber_enabled_size">0dp</item>
        <item name="scrubber_dragged_size">0dp</item>
        <item name="touch_target_height">2dp</item>
        <item name="bar_height">2dp</item>
    </style>

    <style name="Widget.StreamingMusicPlayer.DefaultTimeBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="played_color">?colorPrimaryVariant</item>
        <item name="buffered_color">@color/white_alpha_40</item>
        <item name="unplayed_color">@color/white_alpha_15</item>
        <item name="scrubber_drawable">@drawable/ic_scrubber</item>
        <item name="bar_height">2dp</item>
    </style>

    <style name="Widget.StreamingMusicPlayer.CardView.MusicTrackItem">
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardForegroundColor">@color/selected_music_item_color</item>
    </style>

    <style name="Widget.StreamingMusicPlayer.BottomSheet.MusicPlayer" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@null</item>
        <item name="android:maxWidth">@null</item>
        <item name="backgroundTint">@color/musicBottomSheet.tint.dark</item>
    </style>
</resources>